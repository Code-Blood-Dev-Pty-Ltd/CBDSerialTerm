<Window x:Class="CBDSerialTerm.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CBDSerialTerm"
        mc:Ignorable="d"
        Title="SplashWindow" Height="600" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" KeyDown="Window_KeyDown">
    <Grid MouseDown="Grid_MouseDown" Background="#404040">
        <Image Source="/SerialTerm.jpg" Stretch="UniformToFill" Margin="5,5,5,5"/>
        <Image Source="/logo.jpg" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Opacity="0.95" Margin="20,20,20,20"/>
        <Label x:Name="label" Content="CBD Serial Term V1.0" FontSize="14" HorizontalAlignment="Center" Margin="0,404,0,166" Foreground="#E5FFFFFF"/>
        <Label x:Name="label1" Content="Serial Terminal" FontSize="40" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>

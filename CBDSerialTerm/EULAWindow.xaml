<Window x:Class="CBDSerialTerm.EULAWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CBDSerialTerm"
        mc:Ignorable="d"  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="EULA" Height="800" Width="1000" Style="{StaticResource MaterialDesignWindow}" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" FontFamily="Consolas">
    <Grid Background="Gray">
        <TextBox x:Name="textBoxEULA" Background="Black" Foreground="White" IsReadOnly="True" Padding="5,5,5,5" Margin="10,10,10,52" TextWrapping="Wrap" Text="EULA" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True"/>
        <Button x:Name="buttonAccept" Margin="10,0,0,15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="78" Background="#FF06CA00" BorderBrush="#FF06CA00" Foreground="White">
            Accept
        </Button>
        <Button x:Name="buttonDecline" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Background="#FFD41300" BorderBrush="#FFD41300" Foreground="White" FontWeight="Bold">
            Decline
        </Button>

    </Grid>
</Window>
